    <li class="HorizontalList__Item">
      <a href="{{ page.metafields.meta.ath_facebook_url | replace_first: 'https://', '' | replace_first: 'http://', '' | prepend: 'https://' }}" class="Link" target="_blank" rel="noopener" aria-label="Facebook">
